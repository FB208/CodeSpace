
@{
    Layout = null;
}


    <nav aria-label="Page navigation">
        <ul class="pagination">
            @{
                int total = Convert.ToInt32(ViewData["Total"]);
                int pageSize = Convert.ToInt32(ViewData["PageSize"]);
                int pageIndex = Convert.ToInt32(ViewData["PageIndex"]);
                int pageCount = total / pageSize + ((total % pageSize) > 0 ? 1 : 0);
            }
            @{
                string baseHref = ViewData["Page_BaseHref"] as string;
                string prevHref = "###";
                if (pageIndex > 1)
                {
                    prevHref = baseHref + (pageIndex - 1);
                }

            }
            <li>
                <a href="@prevHref" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (int i = 1; i < pageCount + 1; i++)
            {
                <li class="@(pageIndex==i?"active":"")">
                    <a href="@(baseHref+i)">@i</a>
                </li>
            }
            <li>
                @{
                    string nextHref = "###";
                    if (pageIndex < pageCount)
                    {
                        nextHref = baseHref + (pageIndex + 1);
                    }

                }
                <a href="@nextHref" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>