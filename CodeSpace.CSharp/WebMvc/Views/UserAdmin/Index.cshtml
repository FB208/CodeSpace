@model IEnumerable<WebMvc.ViewModel.UserAdminVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UserAdmin/_Layout.cshtml";
}


<h1>Index</h1>

<div class="btn-toolbar" role="toolbar">
    <div class="btn-group">
        <a  class="btn btn-default" asp-action="Create">创建</a>
        <button type="button" class="btn btn-default">按钮 2</button>
        <button type="button" class="btn btn-default">按钮 3</button>
    </div>

</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NickName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleFlagName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NickName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleFlagName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel)
                </td>
                <td>
                    @Html.ActionLink("详情", "Details", new { id = item.Uuid }) |
                    @Html.ActionLink("修改", "Edit", new { id = item.Uuid }) |
                    @Html.ActionLink("删除", "Delete", new { id = item.Uuid })
                </td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="Page navigation">
    <ul class="pagination">
        @{
            int total = Convert.ToInt32(ViewData["Total"]);
            int pageSize = Convert.ToInt32(ViewData["PageSize"]);
            int pageIndex = Convert.ToInt32(ViewData["PageIndex"]);
            int pageCount = total / pageSize + ((total % pageSize) > 0 ? 1 : 0);
        }
        @{
            string prevHref = "###";
            if (pageIndex > 1)
            {
                prevHref = "/UserAdmin/Index?pageIndex=" + (pageIndex - 1);
            }

        }
        <li>
            <a href="@prevHref" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        @for (int i = 1; i < pageCount + 1; i++)
        {
            <li class="@(pageIndex==i?"active":"")">@Html.ActionLink((i).ToString(), "Index", new { pageIndex = i })</li>
        }
        <li>
            @{
                string nextHref = "###";
                if (pageIndex < pageCount)
                {
                    nextHref = "/UserAdmin/Index?pageIndex=" + (pageIndex + 1);
                }

            }
            <a href="@nextHref" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>